<?xml version="1.0" encoding="utf-8"?>
<metadata>

    <layout title="COM_TRACKS_Standard_team_display_layout">
        <message>
        <![CDATA[COM_TRACKS_Displays_a_team_details]]>
        </message>
    </layout>
    
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">
			
			<field name="t" type="sql"
				query="SELECT id AS value, name AS t FROM #__tracks_teams ORDER BY name ASC"
				default=""
				description="COM_TRACKS_Select_a_team"
				extension="com_tracks"
				label="COM_TRACKS_Select_a_team"
				required="true"
			/>
			
		</fieldset>
	</fields>
	
</metadata>