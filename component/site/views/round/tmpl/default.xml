<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_TRACKS_Standard_round_display_layout">
	    <message>
	    <![CDATA[COM_TRACKS_Displays_a_round_details]]>
	    </message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">

			<field name="id" type="sql"
				query="SELECT id AS value, name AS id FROM #__tracks_rounds ORDER BY name ASC"
				default=""
				description="COM_TRACKS_Select_a_round"
				extension="com_tracks"
				label="COM_TRACKS_Select_a_round"
				required="true"
			/>

		</fieldset>
	</fields>

</metadata>
