<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_SEASONS_GROUP_BASIC"
			  description="COM_TRACKS_SEASONS_GROUP_BASIC_DESC"
			  class="span6"
			>
		<field
				name="id"
				type="hidden"
				default="0"
				class="readonly"
				readonly="true"/>

		<field
				name="name"
				type="text"
				label="COM_TRACKS_NAME"
				description="COM_TRACKS_NAME_DESC"
				class="inputbox"
				required="true"/>

		<field
				name="alias"
				type="text"
				label="COM_TRACKS_ALIAS"
				description="COM_TRACKS_ALIAS_DESC"
				class="inputbox"/>

		<field
				name="note"
				type="text"
				label="COM_TRACKS_NOTE"
				description="COM_TRACKS_NOTE_DESC"
				class="inputbox"/>

		<field
				name="count_points"
				type="radio"
				label="COM_TRACKS_COUNT_POINTS"
				description="COM_TRACKS_COUNT_POINTS_DESC"
				class="inputbox">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
				name="enable_stats"
				type="radio"
				label="COM_TRACKS_EVENTTYPE_ENABLE_STATS"
				description="COM_TRACKS_EVENTTYPE_ENABLE_STATS_DESC"
				class="inputbox">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>

		<field
				name="points_attribution"
				type="text"
				label="COM_TRACKS_EVENTTYPE_POINTS_ATTRIBUTION"
				description="COM_TRACKS_EVENTTYPE_POINTS_ATTRIBUTION_DESC"
				size="50" maxlength="255"
				class="inputbox"/>

		<field
				name="description"
				type="editor"
				label="COM_TRACKS_Description"
				description="COM_TRACKS_Description"
				filter="raw" buttons="true"
				/>
	</fieldset>
</form>
