<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC"
			  description="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC_DESC"
			>
		<field
			name="id"
			type="hidden"
			default="0"/>

		<field
			name="event_id"
			type="hidden"
			default="0"/>

		<field
			name="individual_id"
			type="tracksparticipant"
			label="COM_TRACKS_PARTICIPANT"
			description="COM_TRACKS_PARTICIPANT"
			class="inputbox"
			required="true">
			<option value="">JSelect</option>
		</field>

		<field
			name="team_id"
			type="tracksparticipantteam"
			label="COM_TRACKS_TEAM"
			description="COM_TRACKS_TEAM"
			class="inputbox">
			<option value="">JSelect</option>
		</field>

		<field
			name="rank"
			type="text"
			label="COM_TRACKS_Rank"
			description="COM_TRACKS_Rank_desc"
			class="inputbox"/>

		<field
			name="number"
			type="text"
			label="COM_TRACKS_NUMBER"
			description="COM_TRACKS_NUMBER_desc"
			class="inputbox"/>

		<field
			name="bonus_points"
			type="text"
			label="COM_TRACKS_Bonus_points"
			description="COM_TRACKS_Bonus_points"
			class="inputbox"/>

		<field
			name="performance"
			type="textarea"
			label="COM_TRACKS_Performance"
			description="COM_TRACKS_Performance"
			class="inputbox"/>

		<field
			name="comment"
			type="editor"
			label="COM_TRACKS_COMMENT"
			description="COM_TRACKS_RESULT_COMMENT_DESC"
			filter="JComponentHelper::filterText" buttons="true"
			/>

	</fieldset>

	<fields name="params">
		<fieldset name="global">
		</fieldset>
	</fields>
</form>
