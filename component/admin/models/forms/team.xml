<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_TEAMS_GROUP_BASIC"
			  description="COM_TRACKS_TEAMS_GROUP_BASIC_DESC"
			>

		<field
				name="id"
				type="hidden"
				default="0"
				class="readonly"
				readonly="true"/>

		<field
				name="name"
				type="text"
				label="COM_TRACKS_NAME"
				description="COM_TRACKS_NAME_DESC"
				class="inputbox"
				required="true"/>

		<field
				name="alias"
				type="text"
				label="COM_TRACKS_alias"
				description="COM_TRACKS_alias_DESC"
				class="inputbox"/>

		<field
				name="short_name"
				type="text"
				label="COM_TRACKS_TEAM_SHORT_NAME"
				description="COM_TRACKS_TEAM_SHORT_NAME_DESC"
				class="inputbox"
				size="20"
				maxlength="20"
				required="false"/>

		<field
				name="acronym"
				type="text"
				label="COM_TRACKS_TEAM_ACRONYM"
				description="COM_TRACKS_TEAM_ACRONYM_DESC"
				class="inputbox"
				size="6"
				maxlength="6"
				required="false"/>

		<field
				name="checked_out"
				type="hidden"
				filter="unset"/>

		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"/>

		<field
				name="published"
				type="list"
				class="inputbox"
				default="1"
				size="1"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC">
			<option
					value="1">
				JPUBLISHED</option>
			<option
					value="0">
				JUNPUBLISHED</option>
			<option
					value="2">
				JARCHIVED</option>
			<option
					value="-2">
				JTRASHED</option>
		</field>

		<field
				name="picture"
				type="rmedia"
				label="COM_TRACKS_TEAM_PICTURE"
				description="COM_TRACKS_TEAM_PICTURE_DESC"
				class="inputbox"
				preview="show"
				directory="images/com_tracks/teams/"/>

		<field
				name="picture_small"
				type="rmedia"
				label="COM_TRACKS_TEAM_SMALL_PICTURE"
				description="COM_TRACKS_TEAM_SMALL_PICTURE_DESC"
				class="inputbox"
				preview="show"
				directory="images/com_tracks/teams/"/>

		<field
				name="country_code"
				type="rcountry"
				label="COM_TRACKS_COUNTRY"
				description="COM_TRACKS_COUNTRY"
				>
			<option value="">JSELECT</option>
		</field>

		<field
				name="admin_id"
				type="user"
				class="inputbox"
				default="0"
				label="COM_TRACKS_TEAM_ADMIN"
				description="COM_TRACKS_TEAM_ADMIN_DESC"
				/>
	</fieldset>

	<fieldset name="description_group"
			  label="COM_TRACKS_ITEMS_GROUP_DESCRIPTION"
			  description="COM_TRACKS_ITEMS_GROUP_DESCRIPTION_DESC"
			  class="span6"
			>

		<field
				name="description"
				type="editor"
				label="COM_TRACKS_Description"
				description="COM_TRACKS_Description"
				filter="JComponentHelper::filterText" buttons="true"
				/>
	</fieldset>

	<fieldset name="vehicle_group"
			  label="COM_TRACKS_ITEMS_GROUP_VEHICLE"
			  description="COM_TRACKS_ITEMS_GROUP_VEHICLE_DESC"
			  class="span6"
			>
		<field
				name="vehicle_picture"
				type="rmedia"
				label="COM_TRACKS_TEAM_VEHICLE_PICTURE"
				description="COM_TRACKS_TEAM_VEHICLE_PICTURE_DESC"
				class="inputbox"
				preview="show"
				directory="images/com_tracks/vehicles/"/>

		<field
				name="vehicle_description"
				type="editor"
				label="COM_TRACKS_VEHICLE_DESCRIPTION"
				description="COM_TRACKS_VEHICLE_DESCRIPTION_DESC"
				filter="JComponentHelper::filterText" buttons="true"
				/>
	</fieldset>

	<fieldset name="social"
			  label="COM_TRACKS_TEAM_SOCIAL_LINKS"
			  description="COM_TRACKS_TEAM_SOCIAL_LINKS_DESC"
			  class="span6"
			>

		<field
				name="url"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_URL"
				description="COM_TRACKS_TEAM_SOCIAL_URL_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="facebook"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_FACEBOOK"
				description="COM_TRACKS_TEAM_SOCIAL_FACEBOOK_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="twitter"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_TWITTER"
				description="COM_TRACKS_TEAM_SOCIAL_TWITTER_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="youtube"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_YOUTUBE"
				description="COM_TRACKS_TEAM_SOCIAL_YOUTUBE_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="instagram"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_INSTAGRAM"
				description="COM_TRACKS_TEAM_SOCIAL_INSTAGRAM_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="pinterest"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_PINTEREST"
				description="COM_TRACKS_TEAM_SOCIAL_PINTEREST_DESC"
				class="inputbox validate-url"
				validate="url"/>

		<field
				name="vimeo"
				type="url"
				label="COM_TRACKS_TEAM_SOCIAL_VIMEO"
				description="COM_TRACKS_TEAM_SOCIAL_VIMEO_DESC"
				class="inputbox validate-url"
				validate="url"/>

	</fieldset>
</form>
